extends layout

block css
  link(rel='stylesheet', href='/css/page8.css')
  
block content
  div(ng-app='myApp')
    div.app1(ng-app='myApp1' ng-controller='myCtrl1')
      table
        tr(ng-repeat="x in names")
          td {{x.Name}}
          td {{x.Country}}
    hr
    div(ng-app='myApp2' ng-controller='myCtrl2')
      table
        tr(ng-repeat="x in names | orderBy:'Country'")
          td {{x.Name}}
          td {{x.Country}}
    hr      
    div(ng-app='myApp3' ng-controller='myCtrl3')
      table
        tr(ng-repeat="x in names | orderBy:'Country'")
          td {{x.Name}}
          td {{x.Country | uppercase }} 

    hr      
    div(ng-app='myApp4' ng-controller='myCtrl4')
      table
        tr(ng-repeat="x in names")
          td {{$index + 1}}
          td {{x.Name}}
          td {{x.Country | uppercase }} 

    hr      
    div(ng-app='myApp5' ng-controller='myCtrl5')
      table
        tr(ng-repeat="x in names")
          td(ng-if="$odd" style="background-color:#f1f1f1") {{x.Name}}
          td(ng-if="$even") {{x.Name}}
          td(ng-if="$odd" style="background-color:#f1f1f1") {{x.Country}} 
          td(ng-if="$even") {{x.Country}} 

    hr      
    div(ng-app='myApp6' ng-controller='myCtrl6')
      table
        tr(ng-repeat="x in names")
          td(style="{{$odd?'background-color:#f1f1f1':''}}") {{x.Name}}
          td(style="{{$odd?'background-color:#f1f1f1':''}}") {{x.Country}}
                   


block script
  script(src="/js/page/page8.js")   