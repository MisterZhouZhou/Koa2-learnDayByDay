table(class="table table-striped table-hover")
  thead
  tr
    th(class="info") 文章名称
    th(class="info") 分类
    th(class="info") 状态
    th(class="info") 操作
  tbody
    tr(ng-repeat="blog in blogs")
      th
        a(class="btn btn-default disabled") {{blog.blog_title}}
      th
        a(class="btn btn-primary disabled") {{blog.category}}
      th
        a(class="btn btn-primary disabled") {{blog.status}}
      th
        div(class="btn-group")
          a(class="btn btn-default" ng-click="actions.modifyBlog(blog)") 修改
          a(class="btn btn-default" ng-click="actions.deleteBlog(blog._id)") 删除
          a(class="btn btn-default" ng-click="actions.draff(blog)") 发布
          a(class="btn btn-default" ng-click="actions.disdraff(blog)") 取消发布
          a(class="btn btn-default" data-toggle="modal" data-target="#articleModal" ng-click="actions.config(blog)" ) 配置
