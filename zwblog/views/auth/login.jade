doctype html
html
  head
    title 账号登录
    meta(content='text/html;charset=utf-8',http-equiv='Content-Type')
    meta(name="viewport",content="width=320,maximum-scale=1.3,user-scalable=no")
    link(rel='icon',href='/image/favicon.ico',type='image/x-icon')
    link(rel="stylesheet" href="http://cdn.static.runoob.com/libs/bootstrap/3.3.7/css/bootstrap.min.css")
    link(rel='stylesheet', href='/css/login.css')
    script(src="http://cdn.static.runoob.com/libs/jquery/2.1.1/jquery.min.js")
    script(src="http://cdn.static.runoob.com/libs/bootstrap/3.3.7/js/bootstrap.min.js")
  body(ng-app="login" ng-controller="loginCtr")
    div(class="main" style="background:url(/image/login-bg.png)")
      div(class="container container-custom")
        div(class="row wrap-login")
          div(class="login-banner col-sm-6 col-md-7 col-lg-7 hidden-xs")
            a(href="http://dwz.cn/7bBZZ2" target="_blank")
              img(src="/image/login-banner.png" class="img-responsive")
          div(class="login-user col-xs-12 col-sm-6 col-md-5 col-lg-5")
            div(class="login-part")
              h3 帐号登录
              div(class="user-info")
                div(class="user-pass")
                  form
                    input(id="username" ng-model="account.email" tabindex="1" placeholder="输入邮箱" class="user-name" type="text" value="")
                    input(id="password" ng-model="account.password" tabindex="2" placeholder="输入密码" class="pass-word" type="password" value="" autocomplete="off")
                    div.error-mess(ng-show="errMsg")
                      span.error-icon
                      span {{errMsg}}
                    div(class="forget-password")
                      span(class="col-xs-6 col-sm-6 col-md-6 col-lg-6 row")
                        input(type="checkbox" ng-model="account.rememberMe" id="rememberMe" value="true" checked="checked" class="auto-login" tabindex="4")
                        label(for="rememberMe") 自动登录
                      span(class="col-xs-6 col-sm-6 col-md-6 col-lg-6 forget row tracking-ad" data-mod="popu_26" style="float: right;")
                        a(href="#" tabindex="5" target="_blank") 忘记密码
                    button(class="logging" ng-click="login()") 登 录
                div.line
                div(class="third-part tracking-ad" data-mod="popu_27")
                  span(style="width: 257px;") 第三方帐号登录
                  span
                    font(color="red")
                  a(id="qqAuthorizationUrl1" href="alert('qq');" class="qq" target="_blank")
                  a(id="qqAuthorizationUrl2" href="alert('qq2');" class="sina" target="_blank")
                  a(id="qqAuthorizationUrl3" href="alert('qq3');" class="baidu" target="_blank")
                  a(id="qqAuthorizationUrl4" href="alert('qq4');" class="cc" target="_blank")
                  a(id="qqAuthorizationUrl5" href="alert('qq4');" class="github" target="_blank")
                div(class="register-now")
                    span 还没有帐号？
                    span(class="register tracking-ad" data-mod="popu_28")
                      a(href="/admin/register" data-kuick="{&quot;act&quot;:&quot;csdn05&quot;,&quot;desc&quot;:&quot;立即注册&quot;}" target="_blank") 立即注册
    div(class="footer")
      div(class="container")
        p(class="text-center")
          ©2015
          a(href="#" target="_blank") zw版权所有
        p(class="text-center")
          这是末尾
    script(src='/js/angular.min.js')
    script(src='/js/login/controller.js')
    script(src='/js/login/service.js')
